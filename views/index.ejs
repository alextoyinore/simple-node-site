<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')  %>
<body>
    
    <%- include('./partials/nav.ejs') %>

    <div class="content">
        <h2>All Blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a href="/blogs/<%= blog._id %>">
                    <h3 class="blog-title"><%= blog.title %></h3>
                    <p class="blog-excerpt"><%= blog.excerpt %></p>
                </a>
            <% }) %>
        <% }else{ %>
            <p>No blogs to display</p>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs')  %>
</body>
</html>

